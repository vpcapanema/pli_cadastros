# Configurações do Banco de Dados
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pli_cadastros
DB_USER=seu_usuario
DB_PASSWORD=sua_senha

# Configurações de Autenticação
JWT_SECRET=sua_chave_secreta_muito_segura_aqui
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# Configurações do Servidor
PORT=3000
NODE_ENV=development

# Configurações de Email (para recuperação de senha)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=seu_email@gmail.com
EMAIL_PASSWORD=sua_senha_de_app
EMAIL_FROM=noreply@pli.gov.br

# Configurações de Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# Configurações de Segurança
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Configurações CORS
CORS_ORIGIN=http://localhost:8080,https://seu-dominio.com.br

# Configurações de Cache
CACHE_TTL=300
REDIS_URL=redis://localhost:6379

# Configurações de Log
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Configurações AWS (se usando)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=sua_access_key
AWS_SECRET_ACCESS_KEY=sua_secret_key
AWS_S3_BUCKET=seu-bucket

# URL da API (para frontend)
API_URL=http://localhost:3000/api
