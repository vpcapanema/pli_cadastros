# SIGMA-PLI | Módulo de Gerenciamento de Cadastros - Configurações de Ambiente (PRODUÇÃO)
# ========================================

# Servidor
PORT=8888
NODE_ENV=production

# Banco de Dados PostgreSQL (AWS RDS)
# Método de autenticação: REQUIRED (obrigatório)
DB_HOST=seu-host-rds.region.rds.amazonaws.com
DB_PORT=5432
DB_NAME=seu_banco_de_dados
DB_USER=seu_usuario
DB_PASSWORD=sua_senha_segura_aqui
DB_AUTH_MODE=required
DATABASE_URL=postgresql://usuario:senha@seu-host-rds.region.rds.amazonaws.com:5432/seu_banco_de_dados?sslmode=no-verify

# Configurações de Segurança
JWT_SECRET=sua_chave_jwt_super_secreta_aqui_com_pelo_menos_32_caracteres
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# Configurações de Email
# Gmail
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASS=sua_senha_app_aqui
EMAIL_FROM="SIGMA-PLI | Módulo de Gerenciamento de Cadastros <seu_email@gmail.com>"
EMAIL_ADMIN=seu_email@gmail.com

# Configurações OAuth2 para Microsoft
OAUTH2_CLIENT_ID=seu_client_id
OAUTH2_CLIENT_SECRET=seu_client_secret
OAUTH2_REFRESH_TOKEN=seu_refresh_token
OAUTH2_ACCESS_TOKEN=seu_access_token

# Configuração alternativa - SendGrid
SENDGRID_API_KEY=sua_sendgrid_api_key

# Configurações de Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Configurações AWS (para deploy)
AWS_REGION=sa-east-1
AWS_ACCESS_KEY_ID=sua_access_key
AWS_SECRET_ACCESS_KEY=sua_secret_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
ALLOWED_ORIGINS=http://localhost:8080,https://seu-dominio.com

# Logs
LOG_LEVEL=info
LOG_FILE_PATH=./logs/

# Session
SESSION_SECRET=sua_chave_session_super_secreta_aqui
