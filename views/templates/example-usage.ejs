  function demonstrateFunctions() {
    // Ciclar entre os status do sistema
    const statuses = ['online', 'warning', 'error'];
    let currentIndex = 0;

    const interval = setInterval(() => {
      updateSystemStatus(statuses[currentIndex]);
      currentIndex++;

      if (currentIndex >= statuses.length) {
        clearInterval(interval);
        updateSystemStatus('online'); // Voltar ao normal
        alert('Demonstração concluída! Status voltou ao normal.');
      }
    }, 1500);
