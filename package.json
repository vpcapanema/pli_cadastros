{
  "name": "pli-cadastros",
  "version": "1.0.0",
  "description": "Sistema Completo de Gerenciamento de Cadastros PLI - Frontend + Backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "migrate": "node src/config/migrate.js",
    "seed": "node src/config/seed.js",
    "build": "echo 'Build frontend assets'",
    "deploy": "bash scripts/deploy-aws.sh",
    "docker:build": "docker build -t pli-cadastros .",
    "docker:run": "docker run -p 3000:3000 pli-cadastros",
    "docker:dev": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f app",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write src/**/*.js",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "backup:db": "pg_dump $DB_CONNECTION_STRING > backup_$(date +%Y%m%d_%H%M%S).sql",
    "restore:db": "psql $DB_CONNECTION_STRING < backup.sql"
  },
  "keywords": [
    "cadastro",
    "pli",
    "api",
    "nodejs",
    "postgresql",
    "aws",
    "frontend",
    "fullstack"
  ],
  "author": "PLI Team",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cheerio": "^1.1.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.7",
    "pg": "^8.16.3",
    "pg-pool": "^3.6.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vpcapanema/pli_cadastros.git"
  },
  "directories": {
    "frontend": "./frontend",
    "src": "./src",
    "database": "./database",
    "docs": "./docs"
  }
}
